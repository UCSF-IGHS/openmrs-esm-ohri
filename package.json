    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-i18next": "^11.16.7",
    "react-router": "^5.3.1",
    "react-router-dom": "^5.3.1",
    "rxjs": "^6.6.2",
    "sass-loader": "^10.2.1",
    "style-loader": "^1.0.0",
    "typescript": "^4.6.3",
    "unistore": "^3.5.2",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  }
}
